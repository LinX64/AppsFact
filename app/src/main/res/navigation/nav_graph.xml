<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.appsfactory.ui.view.main.MainFragment"
        android:label="Home"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_mainFragment_to_searchArtistFragment"
            app:destination="@id/searchArtistFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchArtistFragment"
        android:name="com.example.appsfactory.ui.view.search.SearchArtistFragment"
        android:label="Search Artist"
        tools:layout="@layout/fragment_artist_search">
        <action
            android:id="@+id/action_searchArtistFragment_to_topAlbumsFragment"
            app:destination="@id/topAlbumsFragment" />
        <action
            android:id="@+id/action_searchArtistFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/topAlbumsFragment"
        android:name="com.example.appsfactory.ui.view.top_albums.TopAlbumsFragment"
        android:label="Top Albums"
        tools:layout="@layout/fragment_top_albums">

        <action
            android:id="@+id/action_topAlbumsFragment_to_detailFragment"
            app:destination="@id/detailFragment" />

        <argument
            android:name="name"
            app:argType="string"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.appsfactory.ui.view.detail.AlbumDetailFragment"
        android:label="Album Detail"
        tools:layout="@layout/fragment_album_detail">

        <argument
            android:name="name"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="artistName"
            app:argType="string"
            app:nullable="true" />

    </fragment>

</navigation>